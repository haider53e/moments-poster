{
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "nodemon src/server/index.js",
    "start": "cross-env NODE_ENV=production node src/server/index.js",
    "pm2:s": "cross-env NODE_ENV=production pm2 start src/server/index.js -n moments-poster",
    "pm2:l": "pm2 logs moments-poster --lines 100",
    "pm2:d": "pm2 delete moments-poster"
  },
  "dependencies": {
    "bootstrap": "^5.3.1",
    "color": "^4.2.3",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "file-type": "^18.5.0",
    "got": "^13.0.0",
    "parse-css-color": "^0.2.1",
    "sass": "^1.63.4",
    "sharp": "^0.32.6",
    "valid-url": "^1.0.9",
    "vite-express": "^0.11.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "nodemon": "^3.0.1",
    "vite": "^5.1.4"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "none"
  },
  "nodemonConfig": {
    "watch": [
      ".env",
      "src/server/",
      "vite.config.js"
    ]
  }
